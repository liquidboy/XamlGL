<Application
    xmlns="http://schemas.xamlgl.com/xamlgl"
    xmlns:x="http://schemas.xamlgl.com/xamlgl/x"
    ThemeName="Metro">
    <Grid x:Name="layoutRoot">
      <Camera x:Name="freeCamera" Type="FreeCamera" Position="Vector3(0, 5, -10)" Target="Vector3.Zero()"></Camera>
      <Light x:Name="skyLight"></Light>
      <Scene x:Name="mainScene" Camera="freeCamera" Light="skyLight"></Scene>
    </Grid>
    
</Application>